<!DOCTYPE html>
<html>
<head>
  <title>Search Emails</title>
  <style>
    body { font-family: sans-serif; max-width: 700px; margin: 2em auto; }
    input, button { padding: 10px; margin-top: 10px; width: 100%; }
    .email-card { padding: 1em; border-bottom: 1px solid #ddd; }
    .email-card h4 { margin: 0; }
    .email-card p { margin: 0.25em 0; color: #555; }
  </style>
</head>
<body>
  <h1>Search Emails Sent From an Address</h1>
    <form method="POST" action="/search-emails">
      <input type="email" name="email" placeholder="someone@example.com" required value="<%= query || '' %>" />
      <button type="submit">Search</button>
    </form>
  <% if (results) { %>
    <h2>Recent Emails Involving <%= query %></h2>
    <% if (results.length === 0) { %>
      <p>No recent emails found.</p>
    <% } else { %>
      <h2>Timeline for <%= query %></h2>
        <div style="border-left: 3px solid #0078d4; padding-left: 15px;">
          <% results.forEach(msg => { %>
            <div style="margin-bottom: 20px;">
              <p style="margin: 0; color: gray;"><%= new Date(msg.receivedDateTime).toLocaleString() %></p>
              <p style="margin: 0;"><strong><%= msg.subject || 'No subject' %></strong></p>
              <p style="margin: 0;">
                <small>
                  From: <%= msg.from?.emailAddress?.address %><br>
                  To: <%= msg.toRecipients?.map(r => r.emailAddress?.address).join(', ') %>
                </small>
              </p>
            </div>
          <% }) %>
        </div>
    <% } %>
  <% } %>
</body>
</html>
