<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Server-Side Search Emails</title>
  <!-- Moment.js for date formatting -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
  <style>
    /* Base reset and typography */
    *, *::before, *::after { box-sizing: border-box; }
    html { font-size: 14px; }
    body {
      font-family: sans-serif;
      font-size: 0.9rem;
      line-height: 1.4;
      max-width: 700px;
      margin: 1.5em auto;
      padding: 0 0.5em;
      background: #f9f9f9;
      color: #333;
    }

    /* Chat thread styling */
    .chat-thread { display: flex; flex-direction: column; gap: 12px; padding: 15px 0; }
    .chat-message { display: flex; width: 100%; }
    .chat-message.sent { justify-content: flex-end; }
    .chat-message.received { justify-content: flex-start; }
    .chat-bubble {
      background: #f1f9fd;
      padding: 10px 14px;
      border-radius: 16px;
      max-width: 75%;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      position: relative;
      font-size: 0.9rem;
      overflow: hidden;
    }
    .chat-message.sent .chat-bubble { background: #d0e7ff; }
    .chat-message.received .chat-bubble { background: #f7f7f7; }

    /* Header inside bubble */
    .chat-header {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 0.8rem;
      color: #555;
      border-bottom: 1px solid rgba(0,0,0,0.1);
      padding-bottom: 6px;
      margin-bottom: 8px;
      cursor: default;
    }
    .chat-header .time { flex-shrink: 0; }
    .chat-header .open-link {
      text-decoration: none;
      font-size: 1.1rem;
      color: #0079bf;
      opacity: 0.7;
      flex-shrink: 0;
    }
    .chat-header .open-link:hover { opacity: 1; }
    .chat-header .subject { font-weight: 500; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

    /* Body of message */
    .chat-body {
      font-size: 0.8rem;
      white-space: pre-wrap;
      max-height: 140px;
      overflow-y: auto;
      line-height: 1.4;
    }
    .chat-body::-webkit-scrollbar { width: 6px; }
    .chat-body::-webkit-scrollbar-thumb { background: rgba(0,0,0,0.2); border-radius: 3px; }

  </style>
</head>
<body>
  <div class="chat-thread">
    <% results.forEach(msg => {
         const fromAddr = (msg.from?.emailAddress?.address || '').toLowerCase();
         const isSent   = fromAddr === user.email.toLowerCase();
         const toList   = msg.toRecipients?.map(r=>r.emailAddress.address).join(', ');
    %>
      <div class="chat-message <%= isSent ? 'sent' : 'received' %>">
        <div class="chat-bubble" title="To: <%= toList %>">
          <div class="chat-header">
            <span class="time" data-time="<%= msg.receivedDateTime %>"></span>
            <a href="<%= msg.webLink %>" target="_blank" class="open-link" title="Open in Outlook">✉️</a>
            <span class="subject"><%= msg.subject || 'No subject' %></span>
          </div>
          <div class="chat-body"><%= msg.body.content %></div>
        </div>
      </div>
    <% }) %>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.time').forEach(el => {
        el.textContent = moment(el.getAttribute('data-time')).fromNow();
      });
    });
  </script>
</body>
</html>
